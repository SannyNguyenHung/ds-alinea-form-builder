            {
              "type": "text",
              "text": "feedback-justiz-services@digitalservice.bund.de",
              "marks": [
                {
                  "type": "link",
                  "attrs": {
                    "data-id": null,
                    "data-entry": null,
                    "data-type": null,
                    "href": "mailto:feedback-justiz-services@digitalservice.bund.de",
                    "title": null
